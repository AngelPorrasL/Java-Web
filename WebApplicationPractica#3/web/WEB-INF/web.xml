<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>addProductsServlet</servlet-name>
        <servlet-class>pck_products.addProductsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>productsServlet</servlet-name>
        <servlet-class>pck_products.productsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>loadProductsServlet</servlet-name>
        <servlet-class>pck_products.loadProductsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>updateProductsServlet</servlet-name>
        <servlet-class>pck_products.updateProductsServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>deleteProductsServlet</servlet-name>
        <servlet-class>pck_products.deleteProductsServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>addProductsServlet</servlet-name>
        <url-pattern>/pck_products.addProductsServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>productsServlet</servlet-name>
        <url-pattern>/pck_products.productsServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>loadProductsServlet</servlet-name>
        <url-pattern>/pck_products.loadProductsServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>updateProductsServlet</servlet-name>
        <url-pattern>/pck_products.updateProductsServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>deleteProductsServlet</servlet-name>
        <url-pattern>/pck_products.deleteProductsServlet</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
</web-app>
